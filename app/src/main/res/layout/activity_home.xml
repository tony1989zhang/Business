<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.HomeActivity">

   <LinearLayout
       android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="vertical"
       android:background="@color/color_e3e3e3"
       >
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_cccccc"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <RelativeLayout android:id="@+id/layout_relativit_tab_home"
          style="@style/activity_home_tab"
            >
            <TextView
                android:id="@+id/iv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comui_tab_home"
                />
            <TextView

                android:id="@+id/tv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/iv_tab_home"
                android:text="首页"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_relativit_tab_message"
            style="@style/activity_home_tab"
            >
            <TextView
                android:id="@+id/iv_tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comui_tab_message"
                />
            <TextView

                android:id="@+id/tv_tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_message"
                android:layout_marginTop="5dp"
                android:text="消息"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_relativit_tab_mine"
            style="@style/activity_home_tab"
            >
            <TextView
                android:id="@+id/iv_tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/comui_tab_person"
                />
            <TextView

                android:id="@+id/tv_tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tab_mine"
                android:layout_marginTop="5dp"
                android:text="我的"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>