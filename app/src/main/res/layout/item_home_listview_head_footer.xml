<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
>


    <TextView
        android:id="@+id/item_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_logo_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="标题"
        android:textColor="@color/color_333333"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_info_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_logo_view"
        android:layout_toRightOf="@id/item_logo_view"
        android:text="@string/video"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/item_title_view"
        android:textColor="@color/result_view"
        android:textSize="16sp"
    />


<!--    <ImageView
        android:id="@+id/product_photo_view"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_below="@id/item_logo_view"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp" />-->


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/item_footer_view"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_d0d0d0"
    />

    <TextView
        android:id="@+id/item_from_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="12dp"
        android:text="来自北京"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="56dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:scaleType="fitXY"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="77dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
</RelativeLayout>

